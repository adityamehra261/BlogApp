<%-include ('partials/header.ejs')%>

<div class="ui main text container">
    <div class="ui huge header">Blogs &nbsp&nbsp&nbsp<i class="quote right icon"></i></div>
    <div class="ui top attached segment">
        <div class="ui divided items">
            <%blogs.forEach(function(blog){%>
                <div class="item">
                    <div class="image">
                        <img src="<%=blog.image%>">
                    </div>
                    <div class="content">
                        <a class="header"href="/blogs/<%=blog._id%>"><%=blog.name%></a>
                        <div class="meta">
                            <span><%=blog.dateCreate.toDateString()%></span>
                        </div>
                        <div class="description">
                            <p><%=blog.body.substring(0,100)%>...</p>
                        </div>
                        <div class="extra">
                            <a class="ui floated basic green button" href="/blogs/<%=blog._id%>">Read More</a>
                        </div>
                    </div>
                </div>
            <%})%>
        </div>
    </div>
</div>


<%-include ('partials/footer.ejs')%>