<%-include ('partials/header.ejs')%>
<div class="ui main text container">
    <div class="ui huge header"><%=blogs.name%></div>
    <div class="ui top attached segment">
        <div class="item">
            <img class="ui centered rounded image segment" src="<%=blogs.image%>">
            <div class="content">
                <span>><%=blogs.dateCreate.toDateString()%></span>
            </div>
            <br>
            <div class="description">
                <p><%=blogs.body%></p>
            </div>
            <br>
            <a class="ui blue button" href="/blogs/<%=blogs._id%>/edit">Edit                      
                &nbsp&nbsp<i class="edit icon" style="font-size: large;"></i>     
            </a>
            <form action="/blogs/<%=blogs._id%>?_method=DELETE" method="POST" style="display: inline;">
                <button class="ui red button">DELETE
                    &nbsp<i class="trash icon" style="font-size: large;"></i></button>
            </form>
        </div>
    </div>
</div>
<%-include ('partials/footer.ejs')%>